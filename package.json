{
  "name": "angularjs-directive-rendered",
  "version": "1.0.0",
  "description": "A tool for rendering AngularJS directives, aimed for UI tests",
  "main": "index.js",
  "author": "Omri Lavi <omril321@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "angular": "1.5.11"
  },
  "devDependencies": {
    "angular-mocks": "1.5.11",
    "babel-core": "6.26.0",
    "babel-jest": "21.2.0",
    "babel-loader": "7.1.2",
    "babel-plugin-angularjs-annotate": "0.8.2",
    "babel-preset-env": "1.6.0",
    "concurrently": "3.5.0",
    "cypress": "^3.0.2",
    "html-webpack-plugin": "2.30.1",
    "jest": "21.2.1",
    "raw-loader": "0.5.1",
    "serve": "6.2.0",
    "start-server-and-test": "^1.7.0",
    "webpack": "3.6.0",
    "webpack-dev-server": "^3.1.5"
  },
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "serve ./build",
    "serve:test": "serve ./cypress/integration/testServerBase/",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "test": "start-server-and-test serve:test http://localhost:5000 cypress:open",
    "cypress:open": "cypress open"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.js",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^(?!.*\\.(js|jsx|json)$)": "<rootDir>/jest/fileTransform.js"
    }
  }
}
