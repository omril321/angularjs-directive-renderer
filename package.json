{
  "name": "angularjs-directive-rendered",
  "version": "1.0.0",
  "description": "A tool for rendering AngularJS directives, aimed for UI tests",
  "main": "build/renderIsolatedDirective.js",
  "author": "Omri Lavi <omril321@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {},
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.1",
    "@semantic-release/npm": "^5.0.2",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.0",
    "commitizen": "^2.10.1",
    "concurrently": "3.5.0",
    "cypress": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "http-server": "^0.11.1",
    "raw-loader": "0.5.1",
    "semantic-release": "^15.9.8",
    "start-server-and-test": "^1.7.0",
    "travis-deploy-once": "^5.0.2",
    "webpack": "3.6.0"
  },
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "http-server ./build/ -p 5000",
    "serve:test": "http-server ./cypress/integration/testServerBase/ -p 5000",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "test": "start-server-and-test serve:test http://localhost:5000 cypress",
    "test:open": "start-server-and-test serve:test http://localhost:5000 cypress:open",
    "cypress:open": "cypress open",
    "cypress": "cypress run",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omril321/angularjs-directive-renderer.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
